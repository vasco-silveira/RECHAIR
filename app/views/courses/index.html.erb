<form>
  <div>
    <div class="form-group">
      <input type="text" class="form-control" id="search_input" aria-describedby="searchInput" placeholder="Search for courses...">
    </div>
  <select class="custom-select my-1 mr-sm-2" id="institution_select">
    <option selected >All institutions</option>
    <% @institutions.each do |i| %>
    <option> <%= i %> </option>
    <% end %>
  </select>
  <button type="submit" class="btn btn-primary">Go!</button>
  </div>
</form>


<div class="container-fluid">
  <div class="cards">
    <% @courses.each do |course| %>
      <div>
        <div class="card-product">
          <div class="row">
            <div class="col">
              <%= link_to course_path(course) do %>
               <img src="<%=course.image_url%>">
              <% end %>
            </div>
          </div>
          <%# Course title, Institution name, and Description %>
          <div class="row">
            <div class="col">
              <div class="text-center">
                <h5><%= link_to course.title, course_path(course) %>, </h5>
                <h6>at <%= course.institution.name %></h6> <%# add link to institution profile page %>
              </div>
              <div class="text-left">
                <p><%= course.description.first(100) %>...</p>
              </div>
            </div>
          </div>
          <%# Professor name and Price %>
          <div class="d-flex justify-content-between card-bottom">
            <p>Prof. <%= course.professor %></p>
            <p>Â£<%= course.price %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
