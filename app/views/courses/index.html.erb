<div class="container-fluid">
  <div class="cards">
    <% @courses.each do |course| %>
      <div>
        <div class="card-product">
          <div class="row">
            <div class="col">
              <img src="<%= course.image_url %>">
            </div>
          </div>
          <div class="row">
            <div class="col text-center">
              <h5><%= link_to course.title, course_path(course) %>, </h5>
              <h6>at <%= course.institution.name %></h6> <%# add link to institution profile page %>
              <p><%= course.description.first(150) %>...</p>
            </div>
          </div>
          <div class="d-flex justify-content-between card-bottom">
            <p>Prof. <%= course.professor %></p>
            <%# <p><%= course.professor %></p> <%# Add city after professor? Maybe Uni name is suggestive %>
            <p>Price: Â£<%= course.price %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
