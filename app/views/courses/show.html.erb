<div class="container-fluid">
  <section>
    <div>
      <img class="image-fluid" src="<%= @course.image_url %>">
    </div>
  </section>


  <div class="course-page-title">
    <h3> <%= @course.title %> </h3>
    <%# <h2> <%= @institution.name </h2> %>
  </div>

  <hr>

  <div class="info-section">
    <div class="course-details-section">
      <p> <b>Professor:</b> <%= @course.professor %> </p>
      <p> <b>Subject:</b> <%= @course.subject %> </p>
      <p> <b>Start date:</b> <%= @course.start_date %> </p>
      <p> <b>End date:</b> <%= @course.end_date %> </p>
      <p> <b>Price:</b> Â£<%= @course.price %> </p>
      <p> <b>Course rating:</b> <%= @course.rating %> </p>
    </div>

    <%# Button to Reserve Chair %>
    <% if current_user.bookings.where(course_id: @course.id) == [] %>
      <div class="booking-btn">
        <%= simple_form_for [@course, Booking.new] do |f| %>
          <%= f.submit "Reserve Chair", class: "btn btn-primary", id: "reservation-btn", data: {course_id: @course.id, user_id: current_user.id} %>
        <% end %>
      </div>
    <% end %>

    <%# Button to Ask Instructor a Question %>
    <%# <% if current_user.chatrooms.where(course_id: @course.id) == [] %>
      <div class="booking-btn">
        <%= simple_form_for [@course, Chatroom.new] do |f| %>
          <%= f.submit "Ask Question", class: "btn btn-primary", id: "reservation-btn", data: {course_id: @course.id, user_id: current_user.id} %>
        <% end %>
      </div>
    <%# <% end %>

  </div>

  <hr>

  <div class="description-section">
    <p> <b>Description:</b> </p>
    <p> <%= @course.description %> </p>
  </div>

</div>
