<div class="container-fluid">

  <h1>Hi, <%= @user.first_name %></h1>
  <h3>Let's see what courses you have coming up...</h3>
  <div class="flex-container">
    <div>
      <%= image_tag "Header-avatar-01.svg", class: "avatar-large" %>
    </div>


    <div>
      <p>Name: <%= @user.first_name %> <%= @user.last_name %></p>
      <p>Email: <%= @user.email %></p>
    </div>
  </div>
</div>
<div class="container-fluid">
  <h1>My Bookings</h1>


<div class="container-fluid">
  <div class="cards">
    <% @bookings.each do |booking| %>
      <div>
        <div class="card-product">
          <div class="row">
            <div class="col">
              <img src="<%= booking.course.image_url %>">
            </div>
          </div>
          <%# Course title, Institution name, and Description %>
          <div class="row">
            <div class="col">
              <div class="text-center">
                <h5><%= booking.course.title %> </h5>
                <h6>at <%= booking.course.institution.name %></h6> <%# add link to institution profile page %>
              </div>
              <div class="text-left">
                <p><%= booking.course.description.first(150) %>...</p>
              </div>
            </div>
          </div>
          <%# Professor name and Price %>
          <div class="d-flex justify-content-between card-bottom">
            <p>Prof. <%= booking.course.professor %></p>
            <p>Â£<%= booking.course.price %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container-fluid">
  <div class="flex-container">
    <div>
      <%= link_to "Find a course to study", courses_path %>
    </div>
    <div>
      <%= link_to "Edit your profile", edit_page_path(:id) %>
    </div>
  </div>
</div>
